@model UpdatePasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>DYS - Şifre Güncelle</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Şifre Güncelle</h3></div>
                                <div class="card-body">
                                    <div class="small mb-3 text-muted">Lütfen yeni şifrenizi giriniz. </div>
                                    <form method="post" asp-action="PasswordRecovery">
                                        <div class="form-group"><label class="small mb-1" asp-for="Password">Şifre</label><input asp-for="Password" class="form-control py-4"  type="password"  placeholder="Şifre" /></div>
                                        <div class="form-group"><label class="small mb-1" asp-for="ConfirmPassword">Şifre</label><input asp-for="ConfirmPassword" class="form-control py-4"  type="password"  placeholder="Şifre tekrar" /></div>
                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0"><a class="small" href="login.html">Login sayfasına git</a><button class="btn btn-primary" type="submit">Şifre Güncelle</button></div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small"><a href="register.html">Yeni hesap aç</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; UMK 2019</div>
                        <div>
                            <a href="#">Hakkımda</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>