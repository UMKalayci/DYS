@model UserForRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>DYS - Kayıt Ol</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Hesap Oluştur</h3></div>
                                <div class="card-body">
                                    <form method="post" asp-action="register">
                                        <div asp-validation-for="" class="text-warning text-center"></div>
                                        <div asp-validation-summary="ModelOnly" class="text-warning"></div>
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="FirstName" class="small mb-1" for="inputFirstName">İsim</label>
                                                    <input asp-for="FirstName" class="form-control py-4" id="inputFirstName" type="text" placeholder="İsim giriniz" />
                                                    <span asp-validation-for="FirstName" class="text-warning"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="LastName" class="small mb-1" for="inputLastName">Soyisim</label>
                                                    <input asp-for="LastName" class="form-control py-4" id="inputLastName" type="text" placeholder="Soyisim giriniz" />
                                                    <span asp-validation-for="LastName" class="text-warning"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Email" class="small mb-1" for="inputEmailAddress">Email</label>
                                            <input asp-for="Email" class="form-control py-4" id="inputEmailAddress" type="email" aria-describedby="emailHelp" placeholder="Mail giriniz" />
                                            <span asp-validation-for="Email" class="text-warning"></span>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="Password" class="small mb-1" for="inputPassword">Şifre</label>
                                                    <input asp-for="Password" class="form-control py-4" id="inputPassword" type="password" placeholder="Şifre giriniz" />
                                                    <span asp-validation-for="Password" class="text-warning"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="ConfirmPassword" class="small mb-1" for="inputConfirmPassword">Şifre Tekrar</label>
                                                    <input asp-for="ConfirmPassword" class="form-control py-4" id="inputConfirmPassword" type="password" placeholder="Şifre giriniz" />
                                                    <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mt-4 mb-0"><button class="btn btn-primary btn-block" type="submit">Hesap Oluştur</button></div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small"><a asp-action="Login">Zaten bir hesabın var mı? Login ekranına Git.</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2019</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>
